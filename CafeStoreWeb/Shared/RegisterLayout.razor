@using CafeStoreWeb.Services.UserService
@using System.Net.Http.Headers
@using System.Text.Json
@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject NotificationService NotificationService
@inject Blazored.LocalStorage.ILocalStorageService sessionStorage
@inject HttpClient Http
@inject NavigationManager _navigationManager
<div class="container-sm" id="divElement">
    <RadzenCard class="d-flex m-5 p-0 rz-border-radius-4 rz-shadow-10" Style="flex-direction: column; overflow: hidden; align-items: stretch;">
        <RadzenCard Class="rz-shadow-0 rz-border-radius-0 p-5" style="text-align: center; background: var(--rz-primary-light) no-repeat 100% 70% fixed url('data:image/svg+xml;base64,')">
            <RadzenText TextStyle="TextStyle.DisplayH3" TagName="TagName.H2" Class="rz-color-white mb-0">Register</RadzenText>
        </RadzenCard>
        <RadzenCard Class="rz-shadow-0 p-5">
                    <div class="row">
                        <div class="col-md-4 align-items-center d-flex">
                            <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Username</RadzenText>
                        </div>
                        <div class="col-md-8">
                    <RadzenTextBox TValue="string" @oninput=@(args => OnChangeUserName(args.Value!.ToString()!)) style="width: 100%;" />
                        </div>
                    </div>
                    <br />
            <div class="row">
                <div class="col-md-4 align-items-center d-flex">
                    <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Email Address</RadzenText>
                </div>
                <div class="col-md-8">
                    <RadzenTextBox style="width: 100%;" @oninput=@(args => OnChangeEmail(args.Value!.ToString()!)) />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-4 align-items-center d-flex">
                    <RadzenText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Password</RadzenText>
                </div>
                <div class="col-md-8">
                    <RadzenPassword style="width: 100%;" @oninput=@(args => OnChangePasword(args.Value!.ToString()!)) />
                </div>
            </div>
            <br />
            <RadzenButton Style="float:right" Text="SUBMIT" ButtonStyle="ButtonStyle.Primary"
                          Click="@OnRegister" />
        @if(isLoading){
            <span class="spinner-border spinner-border-md d-flex justify-content-center centered" role="status" aria-hidden="true"></span>

        }      
        </RadzenCard>
    </RadzenCard>
    <div class="alert alert-primary @HideAlert" role="alert">
        @AlertContent
    </div>
  
    <style>
        #divElement {
            position: fixed;
            top: 50%;
            left: 50%;
            -webkit-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
            background-repeat :no-repeat;
            background-size:cover;
        }
    </style>
</div>

@code {
    bool isLoading;
    string color = "#635ED5";
    string userName = "";
    string password = "";
    string email = "";
    [Inject] 
    public IUserService?  user{ get; set; }
    protected override async Task OnInitializedAsync()
    {
        isLoading = false;
    }

    async Task<string> OnRegister()
    {
        isLoading = true;
        var model = new RegisterModel()
        {
            Username=userName,
            Email=email,
            Password=password
        };
        var result=await Http.PostAsJsonAsync("api/Authenticate/register-admin", model);
        if(result.IsSuccessStatusCode){
            var login = await Http.PostAsJsonAsync("api/Authenticate/login", model);
            if(login.IsSuccessStatusCode){
                var obj = login.Content.ReadAsStringAsync().Result;
                string token = JsonSerializer.Deserialize<TokenModel>(obj, new JsonSerializerOptions { PropertyNameCaseInsensitive = true })!.token!;
                Http.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue("Bearer", token);
                var resultInit = await Http.GetAsync("api/Initailizataion");
                if(resultInit.IsSuccessStatusCode){
                    _navigationManager.NavigateTo("/login", true);
                }
                else{
                    color = "#F70000";
                }
            }
            else {
                color = "#F70000";
            }
        }
        else{
            color = "#F70000";
        }
        return color;
    }
    void OnResetPassword(string value, string name)
    {
        Console.WriteLine($"{name} -> ResetPassword for user: {value}");
    }
    public string OnChangeUserName(string value){
        userName = value;
        return userName;
    }
    public string OnChangeEmail(string value)
    {
        email = value;
        return email;
    }
    public string OnChangePasword(string value)
    {
        password = value;
        return password;
    }
    void ShowNotification(NotificationMessage message)
    {
        NotificationService.Notify(message);

        Console.WriteLine($"{message.Severity} notification");
    }
    private string HideAlert { get; set; } = "d-none";
    private string AlertContent { get; set; } = "This is a primary alert—check it out!";
    private void DoSomthing()
    {
        var test = sessionStorage.GetItemAsync<string>("Token");
        if (HideAlert == "")
        {
            HideAlert = "d-none";
            AlertContent = "This is a primary alert—check it out!";
        }
        else
        {
            HideAlert = "";
            AlertContent = "Hello World";
        }
    }
}
