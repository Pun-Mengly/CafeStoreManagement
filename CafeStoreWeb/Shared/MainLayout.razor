@inherits LayoutComponentBase
@inject Blazored.LocalStorage.ILocalStorageService sessionStorage
@inject NavigationManager _navigationManager
<PageTitle>FABEX</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <RadzenButton Text="LOG OUT" Variant="Variant.Outlined" ButtonStyle="ButtonStyle.Danger" Click=@(args => Logout()) target="_blank"></RadzenButton>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
<RadzenDialog />
<RadzenNotification />
<RadzenContextMenu />
<RadzenTooltip />
@code{
    async void Logout(){
        await sessionStorage.ClearAsync();
        _navigationManager.NavigateTo("/login",true,true);
    }
}
